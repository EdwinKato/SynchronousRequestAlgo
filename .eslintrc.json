{
    "extends": ["airbnb-base", "prettier" ],
    "plugins": ["prettier"],
    "rules": {
      "prettier/prettier": "error",
      "max-len": ["error", 80],
      "no-console": "off",
      "import/prefer-default-export": "off",
      "import/no-default-export": "error",  
      "func-names": "off"
    },
    "parser": "babel-eslint",
    "env": {
      "browser": true
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "./webpack.config.js"
        }
      }
    }
}
